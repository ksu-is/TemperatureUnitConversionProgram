# Function for Converting MILES to KILOMETERS
def miles_kilo():
    miles_input = float(input('Enter a distance in Miles: '))
    km = miles_input * 1.609347
    print('You entered {0} Miles. Distance in kilometers: {1}'.format(miles_input, km))

# Function for Converting KILOMETERS TO MILES
def kilo_miles():
    kilometers_input = float(input('Enter a distance in Kilometers: '))
    m = kilometers_input * 0.6214
    print('You entered {0} Kilometers. Distance in Miles: {1}').format(kilometers_input,m)

# Function for Converting INCHES TO MILLIMETERS
def inch_millimeter():
    inch_input = float(input('Enter a distance in Inches: '))
    millimeters = inch_input * 25.4
    print('You entered {0} Inches. Distance in Millimeters: {1}').format(inch_input,millimeters)

# Function for Converting INCHES TO CENTIMETERS
def inch_centimeter():
    inch1_input = float(input('Enter a distance in Inches: '))
    centimeters = inch1_input * 2.54
    print('You entered {0} Inches. Distance in Centimeters: {1}').format(inch1_input,centimeters)


