    print('6. Kilometer - Mile  ')
    print('7. Millimeter - Inch')
    print('8. Centimeter - Inch ')
    print('9. Meter - Foot  ')
    print('10. Meter - Yard')
    print("MASS MEASUREMENTS")
    print('11. Ounces - Grams')
    print('12. Pounds - Kilograms')
    print('13. Short Ton - Metric Ton')
    print('14. Grams - Ounces')
    print('15. Kilograms - Pounds')
